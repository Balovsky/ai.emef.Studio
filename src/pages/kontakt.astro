<script>
    // Czekamy na za≈Çadowanie DOM
    document.addEventListener('DOMContentLoaded', () => {
        
        const form = document.getElementById('contact-form');
        const toast = document.getElementById('toast');
        const btn = document.querySelector('button[type="submit"]');

        if (form) {
            form.addEventListener('submit', (e) => {
                e.preventDefault(); // 1. Zatrzymujemy prze≈Çadowanie strony

                const myForm = e.target as HTMLFormElement;
                const formData = new FormData(myForm);

                // Zmieniamy przycisk na stan "Wysy≈Çanie..."
                if(btn) {
                    var originalText = btn.innerText;
                    btn.innerText = "Wysy≈Çanie...";
                    btn.style.opacity = "0.7";
                    // @ts-ignore
                    btn.disabled = true;
                }

                // 2. Wysy≈Çamy dane do Netlify (AJAX)
                fetch('/', {
                    method: 'POST',
                    headers: { "Content-Type": "application/x-www-form-urlencoded" },
                    // @ts-ignore
                    body: new URLSearchParams(formData).toString()
                })
                .then(() => {
                    // SUKCES!
                    
                    // 3. Wyczy≈õƒá formularz
                    myForm.reset();
                    
                    // 4. Poka≈º Toast (Pop-up)
                    if(toast) {
                        // Usuwamy klasy ukrywajƒÖce
                        toast.classList.remove('translate-y-32', 'opacity-0', 'pointer-events-none');
                        
                        // Ukryj dymek automatycznie po 5 sekundach
                        setTimeout(() => {
                            toast.classList.add('translate-y-32', 'opacity-0', 'pointer-events-none');
                        }, 3000);
                    }

                    // Przywr√≥ƒá przycisk
                    if(btn) {
                        btn.innerText = "Wys≈Çano pomy≈õlnie!";
                        btn.style.backgroundColor = "#10B981"; // Zielony
                        setTimeout(() => {
                            btn.innerText = originalText;
                            btn.style.backgroundColor = ""; // Reset koloru
                            btn.style.opacity = "1";
                            // @ts-ignore
                            btn.disabled = false;
                        }, 3000);
                    }
                })
                .catch((error) => {
                    // B≈ÅƒÑD
                    alert('WystƒÖpi≈Ç b≈ÇƒÖd po≈ÇƒÖczenia. Spr√≥buj ponownie.');
                    if(btn) {
                        btn.innerText = originalText;
                        btn.style.opacity = "1";
                        // @ts-ignore
                        btn.disabled = false;
                    }
                });
            });
        }
    });
</script>